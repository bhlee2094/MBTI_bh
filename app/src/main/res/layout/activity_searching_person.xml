<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="VOMemberInfo"
            type="kr.hongik.mbti.VOMemberInfo" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SearhingPerson"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edge"
                android:gravity="center"
                android:text="검색된 유저 정보"
                android:textColor="#0C0000"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="닉네임"
                    android:textColor="#130000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sp_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/edge"
                    android:text="@{VOMemberInfo.nickname}"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="성별"
                    android:textColor="#150101"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sp_gender"
                    android:layout_width="match_parent"
                    android:background="@drawable/edge"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@{VOMemberInfo.gender}"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="나이"
                    android:textColor="#130101"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sp_age"
                    android:layout_width="match_parent"
                    android:background="@drawable/edge"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@{VOMemberInfo.age}"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="MBTI"
                    android:textColor="#0E0000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sp_mbti"
                    android:layout_width="match_parent"
                    android:background="@drawable/edge"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@{VOMemberInfo.mbti}"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="주소"
                    android:textColor="#1B0101"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sp_address"
                    android:layout_width="match_parent"
                    android:background="@drawable/edge"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@{VOMemberInfo.address}"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="상태메시지"
                    android:textColor="#190202"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/sp_stateMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edge"
                    android:gravity="center"
                    android:text="@{VOMemberInfo.stateMessage}"
                    android:textSize="24sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_send_friend_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:text="친구신청하기"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_chatOhters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:text="채팅하기"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_delete_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:text="친구삭제하기"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>
</layout>